//$ var pgDir = './postgres_db/';
//$ var pgDataDir = './postgres_data/';
//$ var pgPort = 1234;
//$ var njsDir = './deep/path/nodejs/';
{
    "outputFile": "out.yml",
    "prefix": "your",
    "postgres": {
        "template": "${pgDir}docker-compose.yml",
        "args": {
            "isDB": true,
            "data_dir": "${pgDataDir}",
            "db_port": "${pgPort}"
        },
        "env": {
            "config": "${pgDir}envConfig.json"
        }
    },
    "couch": {
        "template": "./couch_db/docker-compose.yml",
        "args": {
            "isDB": true
        },
        "env": {
            "file": "_couch.env"
        }
    },
    "nginx-proxy": {
        "template": "./nginx-proxy/docker-compose.yml",
        "args": {
            "certs_dir": "_certs",
            "vhost_dir": "_vhost"
        }
    },
    "nodejs": {
        "template": "${njsDir}docker-compose.yml",
        "args": {
            "server_code_dir": "nodejsCode",
            "ports": ["${pgPort}"]
        },
        "env": {
            "config": "${njsDir}src/envConfig.json",
            "pgDir": "${path.relative(njsDir + 'src/', pgDir)}",
            "pgPort": "${pgPort}"
            // "pgDataDir": "${pgDataDir}"
        }
    }
}