{
    "prefix": "wn",
    "postgres": {
        "template": "./couch_db/docker-compose.yml",
        "env": "_postgres.env"
    },
    "couch": {
        "env": "_couch.env",
        "template": "./couch_db/docker-compose.yml"
    },
    "nginx-proxy": {
        "template": "./nginx-proxy/docker-compose.yml",

        "args": [
            {"certs_dir": "_certs"}
        ]
    },
    "nodejs": {
        "env": "_nodejs.env",
        "template": "./deep/path/nodejs/docker-compose.yml",

        "args": [
            {"dependsOn": ["${postgres.name}", "${couch.name}"]}
        ]
    }
}